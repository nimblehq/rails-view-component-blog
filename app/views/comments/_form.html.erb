<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="form-group">
    <%= form.label :commenter %>
    <%= form.text_field :commenter, class: "form-control", placeholder: "Your name", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control", placeholder: "Write your comment", required: true %>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
<% end %>
